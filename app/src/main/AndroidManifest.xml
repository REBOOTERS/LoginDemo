<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.engineer.android.mini">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".MinApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.pure.LayoutActivity"
            android:exported="true" />
        <activity android:name=".net.RxCacheActivity" />
        <activity
            android:name=".ui.behavior.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppThemeWithActionBar" />
        <activity
            android:name=".ui.behavior.BehaviorActivity"
            android:exported="true" />
        <activity android:name=".ui.pure.PureUIActivity" />
        <activity android:name=".coroutines.old.OldWayActivity" />
        <activity
            android:name=".ui.pure.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".jetpack.FragmentManagerActivity" />
        <activity android:name=".RootActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--flutter-->
        <activity
            android:name="io.flutter.embedding.android.FlutterActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:theme="@style/MyTheme"
            android:windowSoftInputMode="adjustResize" />
        <!--flutter end-->
    </application>

</manifest>